<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
         	id="br.usp.each.saeg.badua.ui"
         	label="BADUINO">
         	</menu>   
      </menuContribution>
      
          <menuContribution 
          locationURI= "popup:br.usp.each.saeg.badua.ui?after=additions">
             <command
                   commandId="br.usp.each.saeg.badua.dataflow.handler"
                   label="Project DUAs Visualization"
                   style="push">
                <visibleWhen
                      checkEnabled="false">
                   <with
                         variable="activeMenuSelection">
                      <iterate
                            ifEmpty="false"
                            operator="or">
                         <adapt
                               type="org.eclipse.jdt.core.IJavaProject">
                         </adapt>
                      </iterate>
                   </with>
                </visibleWhen>
             </command>
             <command
                   commandId="br.usp.each.saeg.badua.dataflow.handler"
                   label="Folder DUAs Visualization"
                   style="push">
                <visibleWhen
                      checkEnabled="false">
                   <with
                         variable="activeMenuSelection">
                      <iterate
                            ifEmpty="false"
                            operator="or">
                         <adapt
                               type="org.eclipse.jdt.core.IPackageFragmentRoot">
                         </adapt>
                      </iterate>
                   </with>
                </visibleWhen>
             </command>
             <command
                   commandId="br.usp.each.saeg.badua.dataflow.handler"
                   label="Package DUAs Visualization"
                   style="push">
                <visibleWhen
                      checkEnabled="false">
                   <with
                         variable="activeMenuSelection">
                      <iterate
                            ifEmpty="false"
                            operator="or">
                         <adapt
                               type="org.eclipse.jdt.core.IPackageFragment">
                         </adapt>
                      </iterate>
                   </with>
                </visibleWhen>
             </command>
             <command
                   commandId="br.usp.each.saeg.badua.dataflow.handler"
                   label="Class DUAs Visualization"
                   style="push">
                <visibleWhen
                      checkEnabled="false">
                   <with
                         variable="activeMenuSelection">
                      <iterate
                            ifEmpty="false"
                            operator="or">
                         <adapt
                               type="org.eclipse.jdt.core.ICompilationUnit">
                         </adapt>
                      </iterate>
                   </with>
                </visibleWhen>
             </command>
            <command
                commandId="br.usp.each.saeg.badua.commands.runJaguar"
                id="br.usp.each.saeg.badua.menu.item.runJaguar"
                label="Run Tests">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false"
                           operator="or">
                        <adapt
                              type="org.eclipse.jdt.core.IJavaProject">
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
      </menuContribution>
          <menuContribution
                allPopups="false"
                locationURI="toolbar:br.usp.each.saeg.badua.DataflowView">
             <command
                   commandId="br.usp.each.badua.toolbar.handler"
                   hoverIcon="icons/classes.gif"
                   icon="icons/public_co.gif"
                   label="Remove highlight"
                   style="push"
                   tooltip="Remove highlight">
             </command>
          </menuContribution>
      
   </extension>
