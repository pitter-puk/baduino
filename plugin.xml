      </specification>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerType="br.usp.each.saeg.badua.markers.definition"
            name="br.usp.each.saeg.badua.definitionAnnotation">
      </type>
      <type
            markerType="br.usp.each.saeg.badua.markers.use"
            name="br.usp.each.saeg.badua.useAnnotation">
      </type>
       <type
            markerType="br.usp.each.saeg.badua.markers.target"
            name="br.usp.each.saeg.badua.targetAnnotation">
      </type>
      <type
            markerType="br.usp.each.saeg.badua.markers.sameLine"
            name="br.usp.each.saeg.badua.sameLineAnnotation">
      </type>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="br.usp.each.saeg.badua.handlers.RunTestsHandler"
            commandId="br.usp.each.saeg.badua.commands.runJaguar"
            helpContextId="RunTests Handler">
      </handler>
      <handler
            class="br.usp.each.saeg.badua.handlers.VisualizationHandler"
            commandId="br.usp.each.saeg.badua.dataflow.handler">
      </handler>
      <handler
            class="br.usp.each.saeg.badua.handlers.CleanAllHighlightHandler"
            commandId="br.usp.each.badua.toolbar.handler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="br.usp.each.saeg.badua.commands.runJaguar"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+1">
      </key>
   </extension>

</plugin>
